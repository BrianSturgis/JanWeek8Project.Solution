@using BakeryAdmin.Models;

<h1>Bakery Order</h1>
  @if (Model.Count == 0)
  {
    <p>There are no items in the list.</p>
  }
<ul>
  @foreach (Order order in Model)
  {
   <li><a href='/Orders/@order.Id'>@order.Description</a></li>
  }

</ul>
<a href="/Orders/new">Add a new item to your order.</a>

<form action="/Orders/delete" method="post">
  <button type="submit" name="button">Clear Order</button>
</form>