@using BakeryAdmin.Models;

<h3>Here are all the Orders for this vendor:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendors"].Id/orders/@order.Id'>@order.OrderTitle</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendors"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>